# A1Betting Frontend Environment Configuration
# Copy this file to .env and update with your actual values

# Backend API Configuration
VITE_BACKEND_URL=http://localhost:8000
VITE_BACKEND_API_TIMEOUT=30000

# Enhanced Mathematical Engine Settings
VITE_ENABLE_ENHANCED_REVOLUTIONARY=true
VITE_ENABLE_NEUROMORPHIC_COMPUTING=true
VITE_ENABLE_MAMBA_STATE_SPACE=true
VITE_ENABLE_CAUSAL_INFERENCE=true
VITE_ENABLE_TOPOLOGICAL_ANALYSIS=true
VITE_ENABLE_RIEMANNIAN_GEOMETRY=true

# Performance Settings
VITE_ENABLE_GPU_ACCELERATION=false
VITE_DEFAULT_NUMERICAL_PRECISION=float32
VITE_DEFAULT_CONVERGENCE_TOLERANCE=1e-6
VITE_ENABLE_REAL_TIME_MONITORING=true
VITE_CACHE_PREDICTIONS=true
VITE_PARALLEL_PROCESSING=true

# External API Configuration
VITE_SPORTRADAR_API_ENDPOINT=https://api.sportradar.us
VITE_SPORTRADAR_API_KEY=your_sportradar_api_key_here

VITE_THEODDS_API_ENDPOINT=https://api.the-odds-api.com
VITE_THEODDS_API_KEY=your_odds_api_key_here

VITE_PRIZEPICKS_API_ENDPOINT=https://api.prizepicks.com
VITE_PRIZEPICKS_API_KEY=your_prizepicks_api_key_here

VITE_ESPN_API_ENDPOINT=https://site.api.espn.com/apis/site
# ESPN API doesn't require key for basic access

VITE_DAILYFANTASY_API_ENDPOINT=https://api.draftkings.com
VITE_DAILYFANTASY_API_KEY=your_dailyfantasy_api_key_here

VITE_WEATHER_API_ENDPOINT=https://api.weatherapi.com
VITE_WEATHER_API_KEY=your_weather_api_key_here

VITE_NEWS_API_ENDPOINT=https://newsapi.org
VITE_NEWS_API_KEY=your_news_api_key_here

VITE_INJURY_API_ENDPOINT=https://api.sportsdata.io
VITE_INJURY_API_KEY=your_injury_api_key_here

# Feature Flags
VITE_ENABLE_REAL_TIME_ODDS=true
VITE_ENABLE_LIVE_PREDICTIONS=true
VITE_ENABLE_SENTIMENT=true
VITE_ENABLE_WEATHER=true
VITE_ENABLE_INJURIES=true
VITE_ENABLE_AUTO_BETTING=false
VITE_ENABLE_ADVANCED_ANALYTICS=true

# Development Settings
VITE_DEBUG_MODE=false
VITE_LOG_LEVEL=info
VITE_ENABLE_PERFORMANCE_MONITORING=true

# UI/UX Settings
VITE_ENABLE_ANIMATIONS=true
VITE_THEME_MODE=auto
VITE_DEFAULT_SPORT=basketball
VITE_DEFAULT_PROCESSING_LEVEL=advanced

# Security Settings
VITE_ENABLE_SSL=false
VITE_CORS_ENABLED=true

# Cache Configuration
VITE_CACHE_TTL_PREDICTIONS=300000
VITE_CACHE_TTL_PLAYER_STATS=300000
VITE_CACHE_TTL_ODDS=30000
VITE_CACHE_TTL_NEWS=900000
VITE_CACHE_MAX_SIZE=1000

# Mathematical Engine Defaults
VITE_DEFAULT_NEUROMORPHIC_TIMESTEPS=100
VITE_DEFAULT_MAMBA_SEQUENCE_LENGTH=50
VITE_DEFAULT_CAUSAL_SIGNIFICANCE_LEVEL=0.05
VITE_DEFAULT_TOPOLOGICAL_MAX_DIMENSION=2
VITE_DEFAULT_RIEMANNIAN_MANIFOLD_DIM=16

# Real-time Settings
VITE_WEBSOCKET_ENABLED=true
VITE_WEBSOCKET_RECONNECT_INTERVAL=5000
VITE_REAL_TIME_UPDATE_INTERVAL=30000
VITE_AUTO_REFRESH_DASHBOARD=true

# Error Handling
VITE_ENABLE_ERROR_REPORTING=true
VITE_FALLBACK_TO_MOCK_DATA=true
VITE_RETRY_FAILED_REQUESTS=true
VITE_MAX_RETRY_ATTEMPTS=3

# Analytics
VITE_ENABLE_USAGE_ANALYTICS=true
VITE_TRACK_PREDICTION_ACCURACY=true
VITE_TRACK_USER_INTERACTIONS=true
