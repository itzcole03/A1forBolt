{
  "compilerOptions": {
    "jsx": "react-jsx",
    "lib": [
      "DOM",
      "ES2020"
    ],
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "types": [
      "vite/client",
      "jest"
    ],
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "composite": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "!src/**/*.d.ts"
  ]
}
